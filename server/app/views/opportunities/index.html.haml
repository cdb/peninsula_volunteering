- model_class = Opportunity
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:start_time)
      %th= model_class.human_attribute_name(:end_time)
      %th= model_class.human_attribute_name(:number_of_positions)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @opportunities.each do |opportunity|
      %tr
        %td= link_to opportunity.id, opportunity_path(opportunity)
        %td= opportunity.title
        %td= opportunity.description
        %td= opportunity.date
        %td= opportunity.start_time
        %td= opportunity.end_time
        %td= opportunity.number_of_positions
        %td=l opportunity.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_opportunity_path(opportunity), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), opportunity_path(opportunity), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_opportunity_path, :class => 'btn btn-primary'
