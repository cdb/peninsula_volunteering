= simple_form_for @opportunity, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  = f.input :date
  = f.input :start_time, as: :time
  = f.input :end_time
  = f.input :number_of_positions
  = f.button :submit
  = link_to t('.cancel', :default => t("helpers.links.cancel")), opportunities_path, :class => 'btn'
